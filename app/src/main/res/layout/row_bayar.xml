<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="16dp"
    android:background="@drawable/shape"
    android:backgroundTint="@color/blue_500">


    <ImageView
        android:id="@+id/icDone"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:src="@drawable/ic_check_circle_outline_24"
        android:translationZ="1dp"
        app:tint="@color/gren_500" />


    <LinearLayout
        android:layout_marginLeft="5dp"
        android:backgroundTint="@color/white"
        android:background="@drawable/shape"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ansuran"
            android:id="@+id/ansuranKe"
            android:gravity="center"
            android:drawablePadding="5dp"/>



        <TextView
            android:id="@+id/jumblah_ansuran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp1.150.000"
            android:textColor="@color/blue_500"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/layoutBtnNasabah"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnBayar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bayar"
                android:textColor="@color/gren_500"
                android:background="@drawable/shape"
                android:backgroundTint="@color/gren_200"
                android:paddingVertical="10dp"
                android:layout_weight="6"
                android:gravity="center"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layoutBtnHead"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/btnSetujui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Setujui"
                android:textColor="@color/gren_500"
                android:background="@drawable/shape"
                android:backgroundTint="@color/gren_200"
                android:paddingVertical="10dp"
                android:layout_weight="6"
                android:gravity="center"/>

        </LinearLayout>


    </LinearLayout>
</RelativeLayout>